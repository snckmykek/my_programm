<AddList>:
    size_hint: (.8, .15)
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            color: (0,0,0,.1)
            id: text_inp
            on_touch_down: root.clear_text_inp()
            text: 'Введите имя списка'.encode('cp1251').decode('utf-8')
        FlatButton:
            on_release: root.add_list_close_callback()
            text: 'Ok'

<AllProductSettingTextInput>:
    background_active: ''
    background_color: (1,1,1,1)
    background_disabled_normal: ''
    background_normal: ''
    foreground_color: (0,0,0,.35)
    height: 50
    size_hint: None, None
    weight: 50

<AllProductButton>:
    background_color: (1,1,1,1)
    background_down: ''
    background_normal: ''

<FlatButton>:
    canvas.before:
        Color:
            rgba: (1,.42,.05,1)
        Rectangle:
            pos: self.pos
            size: self.size

<ListButton>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
